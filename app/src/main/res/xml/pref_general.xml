<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">


    <SwitchPreference
        android:defaultValue="@bool/Jacques_Dominique_switch_def"
        android:key="Jacques_Dominique_switch"
        android:title="Famille Jacques et Dominique Chatron" />
    <stellarnear.perequation.EditTextPreference
        android:dependency="Jacques_Dominique_switch"
        android:defaultValue="@string/Jacques_Dominique_n_def"
        android:key="Jacques_Dominique_n"
        android:title="Nombre de personnes dans la famille"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Valeur : %s"/>

    <SwitchPreference
        android:defaultValue="@bool/Jeremie_Marjorie_switch_def"
        android:key="Jeremie_Marjorie_switch"
        android:title="Famille Jacques et Dominique Chatron" />
    <stellarnear.perequation.EditTextPreference
        android:dependency="Jeremie_Marjorie_switch"
        android:defaultValue="@string/Jeremie_Marjorie_n_def"
        android:key="Jeremie_Marjorie_n"
        android:title="Nombre de personnes dans la famille"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Valeur : %s"/>

</PreferenceScreen>
