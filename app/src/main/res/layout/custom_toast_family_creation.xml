<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/toast_RelativeLayout_item_creation"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_creation_family"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/general_margin">

    <FrameLayout
        android:id="@+id/toast__item_creation_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/toast_item_creation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CrÃ©ation de Famille"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/general_margin">

        <EditText
            android:id="@+id/name_family_creation"
            android:layout_width="wrap_content"
            android:hint="Nom de la famille"
            android:inputType="text"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/id_family_creation"
            android:hint="ID de la famille"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/nmember_family_creation"
            android:hint="Nombre de membres"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/nchild_family_creation"
            android:hint="Nombre d'enfants"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/branch_id_family_creation"
            android:text="ID de la branche familliale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>